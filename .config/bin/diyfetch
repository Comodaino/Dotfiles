#!/bin/sh

# Prepare ------------------------------------------------------------------------------------------

main_color=4

info=$(gum style "

[38;5;${main_color}mï€‡ [0;1;38;5;${main_color}m${USER}[0m@[1;38;5;${main_color}m$(cat /etc/hostname)[0m
â”œâ”€ [38;5;${main_color}mï„‰ [0m Huawei Matebook D15
â”‚  â””â”€ [38;5;${main_color}mï’¼ [0m AMD Ryzen 5500U
â””â”€ [38;5;${main_color}mó°£‡ [0m Arch Linux
   â”œâ”€ [38;5;${main_color}mï’ˆ [0m Hyprland
   â”œâ”€ [38;5;${main_color}mîž• [0m Wezterm
   â””â”€ [38;5;${main_color}mï’‰ [0m $(basename "${SHELL}")")

art=$(gum style '
    [34m___[0m
   [34m([0m.. [34m|[0m
   [34m([33m<> [34m|[0m
  [34m/ [0m__  [34m\[0m
 [34m( [0m/  \[34m/ |[0m
[33m_[34m/\ [0m__)[34m/[33m_[34m)[0m
[33m\/[34m-____[33m\/[0m')

color=$(gum style '[0;30mâ–ˆâ–ˆâ–ˆ[0;31mâ–ˆâ–ˆâ–ˆ[0;32mâ–ˆâ–ˆâ–ˆ[0;33mâ–ˆâ–ˆâ–ˆ[0;34mâ–ˆâ–ˆâ–ˆ[0;35mâ–ˆâ–ˆâ–ˆ[0;36mâ–ˆâ–ˆâ–ˆ[0;37mâ–ˆâ–ˆâ–ˆ[0m
[0;1;90mâ–ˆâ–ˆâ–ˆ[0;1;91mâ–ˆâ–ˆâ–ˆ[0;1;92mâ–ˆâ–ˆâ–ˆ[0;1;93mâ–ˆâ–ˆâ–ˆ[0;1;94mâ–ˆâ–ˆâ–ˆ[0;1;95mâ–ˆâ–ˆâ–ˆ[0;1;96mâ–ˆâ–ˆâ–ˆ[0;1;97mâ–ˆâ–ˆâ–ˆ[0m')


# Display ------------------------------------------------------------------------------------------

terminal_size=$(stty size)
terminal_height=${terminal_size% *}
terminal_width=${terminal_size#* }

prompt_height=${PROMPT_HEIGHT:-1}

print_test() {
	no_color=$(printf '%b' "${1}" | sed -e 's/\x1B\[[0-9;]*[JKmsu]//g')

	[ "$(printf '%s' "${no_color}" | wc --lines)" -gt $(( terminal_height - prompt_height )) ] && return 1
	[ "$(printf '%s' "${no_color}" | wc --max-line-length)" -gt "${terminal_width}" ] && return 1

	gum style --align center --width="${terminal_width}" "${1}" ''
	printf '%b' "\033[A"

	exit 0
}


# Default layout
group_info_color=$(gum join --vertical --align center "${info}" '' "${color}")
print_test "$(gum join --horizontal --align left "${art}" '    ' "${group_info_color}")"

# Other layout
print_test "$(gum join --horizontal "${art}" '    ' "${info}")"
print_test "${group_info_color}"
print_test "${info}"

exit 1
